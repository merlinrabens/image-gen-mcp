{
  "name": "@merlinrabens/image-gen-mcp",
  "version": "1.3.19",
  "description": "MCP server for image generation with multiple provider support",
  "main": "dist/index.js",
  "bin": {
    "image-gen-mcp": "dist/index.js"
  },
  "type": "module",
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc -p .",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "validate-providers": "tsx scripts/validate-providers.ts",
    "lint": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "image-generation",
    "openai",
    "stability",
    "replicate",
    "gemini"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "dotenv": "^16.6.1",
    "sharp": "^0.34.4",
    "undici": "^7.2.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@vitest/coverage-v8": "^2.1.8",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
